{
    "compilerOptions": {
        "module": "es2020",
        "moduleResolution": "node",
        "newLine": "LF",
        "outDir": "./lib/",
        "target": "es5",
        "sourceMap": true,
        "declaration": true,
        "jsx": "react",
        "lib": ["es2017", "dom"],
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true
    },
    "include": ["src/**/*"],
    "exclude": [".git", "node_modules"]
}
